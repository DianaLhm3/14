import numpy as np
import matplotlib.pyplot as plt

# Змодельовані дані
years = np.arange(2003, 2023)  # Останні 20 років
ukraine_data = np.random.randint(50000, 150000, size=len(years))  # Динаміка для України
usa_data = np.random.randint(100000, 200000, size=len(years))  # Динаміка для США

# Лінійний графік
plt.figure(figsize=(12, 6))
plt.plot(years, ukraine_data, marker='o', label='Україна', color='blue', linewidth=2)
plt.plot(years, usa_data, marker='s', label='США', color='red', linewidth=2)
plt.title("Динаміка показника (Children out of school, primary)", fontsize=16)
plt.xlabel("Рік", fontsize=14)
plt.ylabel("Кількість дітей поза школою", fontsize=14)
plt.grid(True, linestyle='--', alpha=0.6)
plt.legend(fontsize=12)
plt.tight_layout()
plt.show()

# Стовпчасті діаграми
selected_country = "Україна"  # Для демонстрації, користувач може змінювати назву країни

if selected_country == "Україна":
    data = ukraine_data
    color = 'blue'
elif selected_country == "США":
    data = usa_data
    color = 'red'

plt.figure(figsize=(12, 6))
plt.bar(years, data, color=color, alpha=0.7)
plt.title(f"Стовпчаста діаграма для {selected_country}", fontsize=16)
plt.xlabel("Рік", fontsize=14)
plt.ylabel("Кількість дітей поза школою", fontsize=14)
plt.grid(axis='y', linestyle='--', alpha=0.6)
plt.tight_layout()
plt.show()
